; ---------------------------------------------------------------------------
; Template of ScriptProject documents

DocumentTemplate ScriptProject {
	DefaultDocName "Scripp"
	ShortName "Scripp"
	Description "Script project document"
        AppearsInLoadFileFilters false
	Filters {
		{
			Format "*.spj"
			Description "Script Project files (.spj)"
		}
	}
	DocumentClass "IlvDvScriptProjectDocument"
	ViewClasses {
		 "IlvDvScriptProjectView"
	}
	IsMDI false
	ShowInBar "Left"
	DocMenu {
                insertItems {
                    {
                        Path "&MainMenu/&MenuTools/Modules"
                        items {
                            {
                                label "SEPARATOR"
                            }
                            {
				label "&MenuScriptProject"
				isPopup true
				popupItems {
					{
						label "NewScriptProject"
					}
					{
						label "OpenScriptProject"
					}
					{
						label "CloseScriptProject"
					}
					{
						label "SEPARATOR"
					}
					{
						label "SaveScriptProject"
					}
					{
						label "SaveAsScriptProject"
					}
					{
						label "SEPARATOR"
					}
					{
						label "InsertScriptFile"
					}
					{
						label "InsertScriptFolder"
					}
					{
						label "SEPARATOR"
					}
					{
						label "Execute"
					}
					{
						label "Stop"
					}
                                        {
						label "Pause"
					}
                                        {
                                                label "SEPARATOR"
                                        }
                                        {
						label "RecentScriptProjects"
					}
				}
			    }
                        }
                    }
	        }
        }
	AlwaysShowMenu true
	RecentOpenFiles {
		MaxFilesCount 3
		Command "RecentScriptProjects"
		Name "RecentScriptProjects"
	}
	OpenCommand "OpenScriptProject"
	NewCommand "NewScriptProject"
	AllowMultipleContainers false
}

