; ---------------------------------------------------------------------------
; Template of script document

DocumentTemplate Script {
	DefaultDocName "ScpDoc"
	ShortName "ScpDoc"
	Description "Script document"
	Filters {
		{
			Format "*.scp"
			Description "Script files (.scp)"
		}
	}
        AppearsInLoadFileFilters false
	DocumentClass "IlvDvTextScriptDocument"
	ViewClasses {
		 "IlvDvTextScriptView"
	}
	DocMenu {
		insertItems {
                    {
                        Path "&MainMenu/&MenuFile"
                        items {
			        {
				        label "&MenuEdit"
				        isPopup true
				        popupItems {
					        {
						        label "Cut"
					        }
					        {
						        label "Copy"
					        }
					        {
						        label "Paste"
					        }
				        }
			        }
                                {
				        label "&MenuRun"
				        isPopup true
				        popupItems {
					        {
						        label "Execute"
					        }
					        {
						        label "Stop"
					        }
                                                {
						        label "Pause"
					        }
                                                {
						        label "SEPARATOR"
					        }
					        {
						        label "StepInto"
					        }
					        {
						        label "StepOver"
					        }
					        {
						        label "StepOut"
					        }
                                                {
						        label "RunToCursor"
					        }
				        }
			        }
                        }
                    }
		}
	}
	Toolbars {
		{
			Name "Text"
			items {
                                {
					label "Cut"
				}
				{
					label "Copy"
				}
                                {
					label "Paste"
				}
                                {
					label "SEPARATOR"
				}
                                {
					label "Execute"
				}
				{
					label "Stop"
				}
                                {
					label "Pause"
				}
                                {
					label "SEPARATOR"
				}
				{
					label "StepInto"
				}
				{
					label "StepOver"
				}
				{
					label "StepOut"
				}
                                {
					label "RunToCursor"
				}
			}
		}
	}
}

