DocumentTemplate BitmapEditor {
	DefaultDocName "Bitmap"
	ShortName "GenDoc"
	Description "Bitmap Editor Document"
	Filters {
		{
			Format "*.png"
			Description "PNG Files (.png)"
		}
		{
			Format "*.bmp"
			Description "BMP Files (.bmp)"
		}
		{
			Format "*.jpg"
			Description "JPG Files (.jpg)"
		}
	}
	DocumentClass "BitmapDocument"
	ViewTemplates {
		{
			ViewClasses {
				 "BitmapView"
			}
		}
	}
	DocMenu {
		insertItems {
			{
				items {
					{
						label "&MenuEdit"
						isPopup true
						popupItems {
							{
								label "ColorChooser"
							}
							{
								label "SEPARATOR"
							}
							{
								label "Undo"
							}
							{
								label "Redo"
							}
						}
					}
				}
			}
		}
	}
	Toolbars {
		{
			Name "MyCommands"
			IsUserBar true
			items {
				{
					label "ColorChooser"
				}
				{
					label "SEPARATOR"
				}
				{
					label "Undo"
				}
				{
					label "Redo"
				}
			}
		}
	}
}

